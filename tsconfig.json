{
  "compilerOptions": {
    "strict": true,
    "rootDirs": [
      "src"
    ],
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "allowSyntheticDefaultImports": true
  },
  "hooks": [
    "copy-files"
  ],
  "ts-node": {
    "esm": true
  }
}